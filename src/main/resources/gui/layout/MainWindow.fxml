<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="900.0" minWidth="700.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.controller.MainController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="loadMenu" mnemonicParsing="false" onAction="#loadMenuAction" text="Load Subs"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Quit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Undo"/>
                        <MenuItem mnemonicParsing="false" text="Redo"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Cut"/>
                        <MenuItem mnemonicParsing="false" text="Copy"/>
                        <MenuItem mnemonicParsing="false" text="Paste"/>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Select All"/>
                        <MenuItem mnemonicParsing="false" text="Unselect All"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About MyHelloApp"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <TabPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tabClosingPolicy="UNAVAILABLE"
                 VBox.vgrow="ALWAYS">
            <tabs>
                <Tab text="Rename">
                    <content>
                        <GridPane alignment="CENTER" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints maxHeight="100.0" minHeight="100.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <ListView fx:id="renameList" fixedCellSize="25.0"/>
                                <ListView fx:id="previewList" GridPane.columnIndex="1"/>
                                <GridPane GridPane.columnSpan="2" GridPane.rowIndex="1">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0"
                                                        vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Button fx:id="loadFilesBttn" maxHeight="1.7976931348623157E308"
                                                maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                                onAction="#loadFilesAction" text="Load files"
                                                GridPane.halignment="CENTER"/>
                                        <Button fx:id="renameBttn" disable="true" maxHeight="1.7976931348623157E308"
                                                maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                                onAction="#renameAction" text="Rename" GridPane.columnIndex="1"/>
                                        <Button fx:id="anaBttn" disable="true" maxHeight="1.7976931348623157E308"
                                                maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                                                onAction="#anaAction" text="Run analysis" GridPane.rowIndex="1"/>
                                        <ProgressBar fx:id="progressBar" maxHeight="1.7976931348623157E308"
                                                     maxWidth="1.7976931348623157E308" prefWidth="200.0" progress="0.0"
                                                     GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>
                                    </children>
                                </GridPane>
                            </children>
                        </GridPane>
                    </content>
                </Tab>
                <Tab text="Opensubtitles">
                    <content>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints/>
                                <RowConstraints maxHeight="25.0" minHeight="25.0" prefHeight="25.0"/>
                            </rowConstraints>
                            <children>
                                <GridPane maxHeight="100.0" GridPane.columnSpan="2147483647">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label alignment="CENTER" maxHeight="1.7976931348623157E308"
                                               maxWidth="1.7976931348623157E308" text="Username">
                                            <GridPane.margin>
                                                <Insets/>
                                            </GridPane.margin>
                                        </Label>
                                        <TextField fx:id="usernameField" promptText="Opensubtitles Username"
                                                   GridPane.columnIndex="1"/>
                                        <Label alignment="CENTER" maxHeight="1.7976931348623157E308"
                                               maxWidth="1.7976931348623157E308" text="Password" GridPane.rowIndex="1"/>
                                        <PasswordField fx:id="passwordField" promptText="Opensubtitles Password"
                                                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <Button fx:id="checkLoginBttn" maxWidth="1.7976931348623157E308"
                                                mnemonicParsing="false" onAction="#checkLoginAction"
                                                text="Check Login Credentials" GridPane.columnIndex="1"
                                                GridPane.rowIndex="2"/>
                                        <Button fx:id="downloadBttn" disable="true" maxWidth="1.7976931348623157E308"
                                                mnemonicParsing="false" onAction="#downloadBttnAction" text="Download"
                                                GridPane.rowIndex="2"/>
                                    </children>
                                    <GridPane.margin>
                                        <Insets bottom="20.0" right="20.0" top="20.0"/>
                                    </GridPane.margin>
                                </GridPane>
                                <TableView fx:id="osTable" maxHeight="1.7976931348623157E308"
                                           maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                                           prefHeight="200.0" prefWidth="600.0" GridPane.columnSpan="2147483647"
                                           GridPane.rowIndex="1">
                                    <columns>
                                        <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Title"/>
                                        <TableColumn fx:id="yearColumn" prefWidth="75.0" text="Year"/>
                                        <TableColumn fx:id="imdbColumn" prefWidth="75.0" text="Imdb"/>
                                        <TableColumn fx:id="seasonColumn" prefWidth="75.0" text="Season"/>
                                        <TableColumn fx:id="episodeColumn" prefWidth="75.0" text="Episode"/>
                                        <TableColumn fx:id="inDatabaseColumn" prefWidth="75.0" text="# in Database"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                </TableView>
                                <GridPane maxHeight="1.7976931348623157E308" GridPane.columnSpan="2147483647"
                                          GridPane.rowIndex="3">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="100.0"
                                                           prefWidth="200.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                                        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                                        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
                                    </rowConstraints>
                                    <children>
                                        <TextField fx:id="searchField" onKeyTyped="#searchFieldChanged"
                                                   promptText="Search" GridPane.columnIndex="1"/>
                                        <Button fx:id="searchBttn" maxWidth="1.7976931348623157E308"
                                                mnemonicParsing="false" onAction="#searchBttnAction" text="Search"
                                                GridPane.columnIndex="1" GridPane.columnSpan="2147483647"
                                                GridPane.rowIndex="2"/>
                                        <Label alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308"
                                               maxWidth="1.7976931348623157E308" text="Search Query :">
                                            <GridPane.margin>
                                                <Insets right="20.0"/>
                                            </GridPane.margin>
                                        </Label>
                                        <Label alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308"
                                               maxWidth="1.7976931348623157E308" text="Season Number :"
                                               GridPane.rowIndex="1">
                                            <GridPane.margin>
                                                <Insets right="20.0"/>
                                            </GridPane.margin>
                                        </Label>
                                        <Spinner fx:id="seasonSpinner" maxWidth="1.7976931348623157E308"
                                                 GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                    </children>
                                    <GridPane.margin>
                                        <Insets right="20.0"/>
                                    </GridPane.margin>
                                    <padding>
                                        <Insets bottom="20.0" top="20.0"/>
                                    </padding>
                                </GridPane>
                                <ListView fx:id="seasonList" prefHeight="200.0" prefWidth="200.0"
                                          GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>
                                <ProgressBar fx:id="progressBar2" maxHeight="1.7976931348623157E308"
                                             maxWidth="1.7976931348623157E308" prefWidth="200.0" progress="0.0"
                                             GridPane.columnSpan="2147483647" GridPane.rowIndex="4"/>
                            </children>
                        </GridPane>
                    </content>
                </Tab>
                <Tab text="Database">
                    <content>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <fx:include fx:id="databaseTab" maxHeight="1.7976931348623157E308"
                                            maxWidth="1.7976931348623157E308" source="DatabaseTab.fxml"
                                            VBox.vgrow="ALWAYS"/>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
